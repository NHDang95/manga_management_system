<table class="table cat-table">
  <thead class="thead-dark">
  <tr>
    <th scope="col" >#</th>
    <th scope="col" ><%= t("chapter_name") %></th>
    <th scope="col" ><%= t(".action") %></th>
  </tr>
  </thead>
  <tbody>
    <% @pages.each.with_index(1) do |page, index| %>
      <tr>
        <td><%= index %></td>
        <td>
          <%= link_to page.chapter.name, edit_admin_chapter_path(page) %> - <%= page.chapter.manga.name %>
        </td>
        <td>
          <%= link_to t(".edit"), edit_admin_page_path(page) %> |
          <%= link_to t(".delete"), admin_page_path(page.id), method: :delete,
                data: { confirm: t("confim") } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @pages %>
<%= link_to t("create"), new_admin_page_path, class: "btn btn success" %>
