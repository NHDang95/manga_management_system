<table class="table cat-table">
  <thead class="thead-dark">
  <tr>
    <th scope="col" >#</th>
    <th scope="col" ><%= t("name") %></th>
    <th scope="col" ><%= t(".manga_name") %></th>
    <th scope="col" ><%= t(".action") %></th>
  </tr>
  </thead>
  <tbody>
    <% @chapters.each.with_index(1) do |chapter, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= chapter.id %></td>
        <td>
          <%= link_to chapter.manga.name, admin_manga_path(chapter) %>
        </td>
        <td>
          <%= link_to t(".edit"), edit_admin_chapter_path(chapter) %> |
          <%= link_to t(".delete"), admin_chapter_path(chapter.id), method: :delete,
                data: { confirm: t("confim") } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @chapters %>
<%= link_to t("create"), new_admin_chapter_path %>
