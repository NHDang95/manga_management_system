<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section>
        <h1><%= @user.name %></h1>
        <h4><%= @user.email %></h4>
        <span><%= link_to t("layouts.header.profile"), @user %></span>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @mangas.any? %>
        <ul>
          <%= render partial: "mangas/manga" %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
