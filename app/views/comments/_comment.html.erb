<h4 class="comment-author"><%= sanitize(comment.author) %></h4>
  <span class="date"><small><%= time_ago_in_words(comment.created_at) %> ago</small></span>
    <p class="comment-content"><%= sanitize(comment.content) %></p>
    <%= link_to t("reply"), new_chapter_comment_path(comment.id), remote: true %>
    <% if user_signed_in? && current_user.name == comment.author  %>
      <%= link_to "", chapter_comment_path(comment.chapter, comment), method: :delete, data: { confirm: 'Delete comment?' },
          class: 'glyphicon glyphicon-trash text-danger', id: "#{comment.id}_delete", remote: true,
          title: 'Delete comment', rel: 'tooltip' %>
    <% end %>
<hr />
