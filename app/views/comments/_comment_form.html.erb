<h3><%= t("comment_form") %></h3>
<%= form_for @comment, remote: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.hidden_field :chapter_id, value: @chapter.id %>
    <%= f.hidden_field :parent_id %>
    <div class="form-group">
      <% if user_signed_in? %>
        <%= f.text_field :author, readonly: true, value: current_user.name, class: 'form-control' %>
      <% else %>
        <%= f.text_field :author, class: 'form-control', placeholder: 'Name (required)' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.text_area :content, rows: Settings.comments.rows, class: 'form-control' %>
    </div>
    <%= f.submit 'Post your comment', class: 'btn btn-default' %>
<% end %>
